<h1>Pedidos Realizados</h1>
<div class="dropdown">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Ordenar
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <li><%= link_to 'Status', orders_path(order: "status") %></li>
    <li><%= link_to 'ID', orders_path(order: "id") %></li>
    <li><%= link_to 'ID Pedidor', orders_path(order: "owner_id") %></li>
  </ul>
</div>
<table class="table table-hover">
  <thead >
       <tr>
         <th>Numero do Pedido</th>
         <th>Numero do ID do Pedidor</th>
         <th>Data de Entrega</th>
         <th>Total</th>
         <th>Status</th>
         <th>Detalhes</th>
       </tr>
     </thead>
     <tbody>
    <% @orders.each do |x| %>
      <tr>
        <td><%= x.id %></td>
        <td><%= x.owner_id %></td>
        <td><%= x.deliverydate %></td>
        <td>R$ <%= '%.2f'%(x.total) %></td>
        <td>
        <% if x.status == 0 %>
                <% tatus = 'warning' %>
                <% message = 'Em processamento' %>
              <% else if x.status == 1 %>
                  <% message = 'Entregue!' %>
                  <% tatus = 'success' %>
                <% else %>
                  <% message = 'Cancelado' %>
                  <% tatus = 'danger' %>
              <% end %>
        <% end %>
          <div class="dropdown">
            <button class="btn btn-<%= tatus %> dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <%= message %>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li><%= link_to 'Entregue!',orders_alterstatus_path(id: x.id, status: 1),remote: true,method: "POST",class: "btn btn-success" %></li>
                <li><%= link_to 'Em Processamento',orders_alterstatus_path(id: x.id, status: 0),remote: true, method: "POST",class: "btn btn-warning" %></li>
                <li><%= link_to 'Cancelado',orders_alterstatus_path(id: x.id, status: 2),remote: true, method: "POST",class: "btn btn-danger" %></li>
              
            </ul>
          </div>
        </td>
        <td><%= link_to '<i class="glyphicon glyphicon-new-window"></i>'.html_safe,'/orders/details/'+ x.id.to_s, class: "btn btn-primary" %></td>
      </tr>       
      <% end %>
     </tbody>
</table>