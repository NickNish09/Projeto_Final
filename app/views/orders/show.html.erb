<h1>Pedidos  de <%= @user.name %></h1>
<table class="table table-hover">
	<thead >
       <tr>
         <th>Numero do Pedido</th>
         <th>Data de Entrega</th>
         <th>Total</th>
         <th>Status</th>
         <th>Detalhes</th>
       </tr>
     </thead>
     <tbody>
		<% @orders.each do |x| %>
			<tr>
				<td><%= x.id %></td>
				<td><%= x.deliverydate %></td>
				<td><%= x.total %></td>
				<td><%= x.status %></td>
				<td>Detalhes</td>
			</tr>     	
     	<% end %>
     </tbody>
</table>
