<h1>Pedidos  de <%= @user.name %></h1>
<table class="table table-hover">
	<thead >
       <tr>
         <th>Numero do Pedido</th>
         <th>Data de Entrega</th>
         <th>Total</th>
         <th>Status</th>
         <th>Atualizado em</th>
         <th>Detalhes</th>
       </tr>
     </thead>
     <tbody>
		<% @orders.each do |x| %>
			<tr>
				<td><%= x.id %></td>
				<td><%= x.deliverydate %></td>
				<td>R$ <%= '%.2f'%(x.total) %></td>
				<td><% if x.status == 1 %>
					<input type="text" class="btn btn-warning disabled" value="<%= Status.find(x.status).name %>" style="text-align: center" readonly/>
					<% else if x.status == 2 %>
					<input type="text" class="btn btn-success disabled" value="<%= Status.find(x.status).name %>" style="text-align: center" readonly/>
					<% else if x.status == 3 %>
						<input type="text" class="btn btn-danger disabled" value="<%= Status.find(x.status).name %>" style="text-align: center" readonly/>
					<% else %>
						<input type="text" class="btn btn-primary disabled" value="<%= Status.find(x.status).name %>" style="text-align: center" readonly/>
					<% end %>
					<% end %>
					<% end %>
				</td>
				<td><%= x.updated_at %></td>
				<td><%= link_to '<i class="glyphicon glyphicon-new-window"></i>'.html_safe,'/orders/details/'+ x.id.to_s, class: "btn btn-primary" %></td>
			</tr>     	
     	<% end %>
     </tbody>
</table>
